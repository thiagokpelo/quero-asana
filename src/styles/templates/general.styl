body
  width 100vw
  min-height 100vh

  background-image url("../images/Yosemite4.jpg")
  background-position center
  background-size cover
  background-repeat no-repeat

  color $color-primary
  font-family sans-serif
  font-size 14px

  fill $color-primary


main
  display flex
  flex-direction row
  justify-content center
  align-items stretch
  height calc(100vh - 160px)
  padding 0 $space-m

section
  width pxToRem(1000px)

  background-color $color-white

  border-radius pxToRem(3px) pxToRem(5px) 0 0
  box-shadow 0 1px 5px 0 rgba(0,0,0,0.15)

  header
    display flex
    align-items center
    height pxToRem(50px)
    padding 0 $space-m

img
  width pxToRem(30px)
  height pxToRem(30px)

  border-radius 50%

  vertical-align middle
